{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
    <h1>Add New User</h1>
	<form action='/member/new' method='POST'>
        <div class="form-group">
			<label for="inputFname">First Name</label>
			<input type="text" class="form-control" id="inputFname" placeholder="Bob" name='fname'>
		</div>
		<div class="form-group">
			<label for="inputLname">Last Name</label>
			<input type="text" class="form-control" id="inputLname" placeholder="Builder"
            name='lname'>
		</div>
        <div
     class="form-group {{'has-success' if errors.get('status')}} {{'has-error' if errors.get('member_id')}}">
			<label for="inputMemberId">Member ID</label>
			<input type="text" class="form-control" id="inputMemberId" placeholder="0000"
            name='member_id'>
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
        {% if errors.get('member_id') %}
            <span id="statusBlock" class="help-block">{{errors.get('member_id')}}</span>
        {% endif %}
	</form>
    {% if errors.get('status') %}
    <h2>User Created</h2>
    {% endif %}
</div>
{% endblock content %}
